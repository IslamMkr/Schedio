<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="0dp"
    app:cardCornerRadius="25dp"
    android:layout_marginStart="6dp"
    android:layout_marginEnd="6dp"
    android:layout_marginBottom="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:gravity="top"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/project_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:ellipsize="end"
                android:fontFamily="@font/roboto_bold"
                android:maxLines="3"
                android:text="SchÃ©dio"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <com.ramijemli.percentagechartview.PercentageChartView
                android:id="@+id/project_progress"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:pcv_mode="ring"
                app:pcv_startAngle="270"
                app:pcv_orientation="clockwise"
                app:pcv_textColor="@color/blue"
                app:pcv_backgroundBarColor="@color/background_color"
                app:pcv_backgroundBarThickness="4dp"
                app:pcv_progress="65"
                app:pcv_progressColor="@color/blue"
                app:pcv_progressBarThickness="4dp"
                app:pcv_animDuration="800"
                app:pcv_animInterpolator="anticipate_overshoot" />

        </LinearLayout>

        <TextView
            android:id="@+id/project_description"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/roboto_regular"
            android:maxLines="2"
            android:ellipsize="end"
            android:text="Discuss the application processes and its workflow and the UX/UI design"
            android:textColor="@color/low_black"
            android:textSize="12sp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/project_days_left"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/roboto_bold"
            android:maxLines="2"
            android:ellipsize="end"
            android:text="2 month left"
            android:textColor="@color/low_black"
            android:textSize="14sp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"/>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>